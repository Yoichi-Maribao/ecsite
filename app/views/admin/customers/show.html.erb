<div class="col">
  <h5><%= @user.full_name %>さんの会員詳細</h5>
  <table class="table-borderless">
    <tr>
      <td>会員ID</td>
      <td><%= @user.id %></td>
    </tr>
    <tr>
      <td>氏名</td>
      <td><%= "#{@user.last_name}　#{@user.first_name}"%></td>
    </tr>
    <tr>
      <td>フリガナ</td>
      <td><%= "#{@user.kana_last_name}　#{@user.kana_first_name}"%></td>
    </tr>
    <tr>
      <td>郵便番号</td>
      <td><%= @user.postcode%></td>
    </tr>
    <tr>
      <td>住所</td>
      <td><%= @user.address %></td>
    </tr>
    <tr>
      <td>電話番号</td>
      <td><%= @user.phone_number %></td>
    </tr>
    <tr>
      <td>メールアドレス</td>
      <td><%= @user.email %></td>
    </tr>
    <tr>
      <td>会員ステータス</td>
      <% if @user.is_active %>
        <td class="text-success">有効</td>
        <% else %>
        <td class="text-secondary">退会</td>
        <% end %>
    </tr>
    <tr>
      <td></td>
      <td>
        <%= link_to "編集する", edit_admin_customer_path(@user.id), class:"btn btn-success" %>
        <%= link_to "注文履歴一覧を見る", "#", class:"btn btn-primary" %>
      </td>
    </tr>
  </table>
</div>