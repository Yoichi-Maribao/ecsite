<div class="col">
  <h5>ジャンル一覧・追加</h5>
  <div class="row my-4">
    <div class="form-group">
      <%= form_with model:[:admin, @genre],local: true do |f| %>
        <%= f.label "ジャンル名" %>
        <%= f.text_field :name, placeholder: "ジャンル名" %>
        <%= f.submit "新規登録", class:"btn btn-success px-3" %>
      <% end %>
    </div>
  </div>

  <div class="row">
    <table class="table col-4">
      <thead>
        <tr>
          <th>ジャンル</th>
          <th></th>
          <th colspan="2"></th>
        </tr>
      </thead>
      <tbody>
      <% @genres.each do |genre| %>
        <tr>
          <td><%= genre.name %></td>
          <td><%= link_to "編集する", edit_admin_genre_path(genre.id), class:"btn btn-success btn-sm" %></td>
        </tr>
      <% end %>
      </tbody>
    </table>
  </div>
</div>