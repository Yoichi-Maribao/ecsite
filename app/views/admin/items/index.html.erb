<div class="col">
  <div class="row">
    <h5>商品一覧</h5>
    <%= link_to new_admin_item_path, class:"ml-auto" do %>
      <i class="fa fa-plus fa-lg circle-shadow" style="color: black"></i>
    <% end %>
  </div>
  <div class="row">
    <table class="table">
      <thead>
        <tr>
          <th>商品ID</th>
          <th>商品名</th>
          <th>税抜き価格</th>
          <th>ジャンル</th>
          <th>ステータス</th>
        </tr>
      </thead>
      <tbody>
        <% @items.each do |item| %>
        <tr>
          <td><%= item.id %></td>
          <td><%= link_to item.name, admin_item_path(item.id) %></td>
          <td><%= item.price.to_s(:delimited) %></td>
          <td><%= item.genre.name %></td>
          <% if item.is_selling %>
            <td class="text-success">販売中</td>
          <% else %>
            <td class="text-secondary">販売停止中</td>
          <% end %>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>