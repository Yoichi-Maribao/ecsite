<div class="col">
  <h5>商品詳細</h5>
  <div class="row">
    <%= attachment_image_tag @item, :image, fallback: "no_image.jpg", :size => '300x200', fallback:'no_image.jpg' %>
    <div class="col-6">
      <table>
        <tr>
          <th>商品名</th>
          <td><%= @item.name %></td>
        </tr>
        <tr>
          <th>商品説明</th>
          <td><%= @item.description %></td>
        </tr>
        <tr>
          <th>ジャンル</th>
          <td><%= @item.genre.name %></td>
        </tr>
        <tr>
          <th>税込価格<br>(税抜価格)</th>
          <td><%= "#{(@item.price*1.1).floor.to_s(:delimited)}(#{@item.price.to_s(:delimited)})" %>円</td>
        </tr>
        <tr>
          <th>販売ステータス</th>
          <% if @item.is_selling %>
            <td class="text-success">販売中</td>
          <% else %>
            <td class="text-secondary">販売停止中</td>
          <% end %>
        </tr>
      </table>
      <%= link_to "編集する", edit_admin_item_path(@item.id), class: "btn btn-success" %>
    </div>
  </div>
</div>