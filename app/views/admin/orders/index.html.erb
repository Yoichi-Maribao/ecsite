<div class="col">
  <h5>注文履歴一覧</h5>
  <table class="table">
    <thead class="thead-light">
      <tr>
        <th>購入日時</th>
        <th>購入者</th>
        <th>注文個数</th>
        <th>注文ステータス</th>
      </tr>
    </thead>
    <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= link_to order.created_at.strftime('%Y/%m/%d %H:%M:%S'), admin_order_path(order.id) %></td>
        <td><%= order.end_user.last_name + order.end_user.first_name %></td>
        <td><%= order.order_details.pluck(:amount).sum %></td>
        <td><%= order.status_i18n %></td>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>