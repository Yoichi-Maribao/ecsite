<div class="col">
  <h3>新規会員登録</h3>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "end_users/shared/error_messages", resource: resource %>
    <%# 姓名 %>
    <div class="form-group col-md-9">

      <%= f.label "名前"%>
      <%= f.label :last_name, "(姓)" %>
      <%= f.text_field :last_name, autofocus: true, placeholder: "令和" %>

      <%= f.label :first_name, "(名)"%>
      <%= f.text_field :first_name, autofocus: true, placeholder: "道子" %>
    </div>
    <%# セイメイ %>
      <div class="form-group col-md-9">
      <%= f.label "フリガナ"%>
      <%= f.label :kana_last_name, "(セイ)" %>
      <%= f.text_field :kana_last_name, autofocus: true, placeholder: "レイワ" %>

      <%= f.label :kana_first_name, "(メイ)"%>
      <%= f.text_field :kana_first_name, autofocus: true, placeholder: "ミチコ" %>
    </div>
    <div class="form-group col-md-9">
      <%= f.label :email, "メールアドレス" %>
      <%= f.email_field :email, autofocus: true, placeholder: "sample@example.com" %>
    </div>
    <%# 郵便番号 %>
    <div class="form-group col-md-9">
      <%= f.label :postcode, "郵便番号(ハイフンなし)" %>
      <%= f.text_field :postcode, autofocus: true, placeholder: "0000000" %>
    </div>
    <%# 住所 %>
    <div class="form-group col-md-9">
      <%= f.label :address, "住所" %>
      <%= f.text_field :address, autofocus: true, placeholder: "東京都渋⾕区代々⽊神園町0-0" %>
    </div>
    <%# 電話番号 %>
    <div class="form-group col-md-9">
      <%= f.label :phone_number, "電話番号(ハイフンなし)" %>
      <%= f.text_field :phone_number, autofocus: true, placeholder: "00000000000" %>
    </div>
    <div class="form-group col-md-9">
      <%= f.label :password %>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %>
      <%= f.password_field :password %>
    </div>

    <div class="form-group col-md-9">
      <%= f.label :password_confirmation %>

      <%= f.password_field :password_confirmation %>
    </div>

    <div class="actions">
      <%= f.submit "新規登録", class:"btn btn-success btn-sm px-5" %>
    </div>
  <% end %>


  <h3>既に登録済みの方</h3>
  <%= render "end_users/shared/links" %>
</div>
