<div class="row mt-3">
  <%= form_with model:address, local: true do |f| %>
  <div class="form-group">
    <%= f.label "郵便番号(ハイフンなし)" %>
    <%= f.number_field :postcode, placeholder: "0000000",step: 1, class:"no-spin" %>
  </div>
  <div class="form-group">
    <%= f.label "住所" %>
    <%= f.text_field :address, placeholder: "東京都渋⾕区代々⽊神園町0-0" %>
  </div>
  <div class="form-group">
    <%= f.label "宛名" %>
    <%= f.text_field :name, placeholder: "令和道子" %>
    <%= f.submit "#{submit}", class: "btn btn-success btn-sm" %>
  </div>
  <% end %>
</div>