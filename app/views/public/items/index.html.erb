<div class="col">
  <h1>商品一覧</h1><%= "(全#{@items.count}件)" %>
  <div class="card-group">
    <% @items.each do |item| %>
      <div class="card col-3">
        <%= link_to item_path(item.id) do %>
          <%= attachment_image_tag item,  :image, :size => "300x170", fallback: "no_image.jpg", class:"card-img-top" %></br>
          <div class="card-body">
            <h5 class="card-title"><%= item.name %></h5>
            <p>¥<%= (item.price*1.1).floor.to_s(:delimited) %></p>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>